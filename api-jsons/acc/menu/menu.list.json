{
    "id":"acc.menu.list",
    "name":"菜单列表",
    "description":"获取菜单列表",
    "namespace":"Kuga\\Api\\Acc",
    "method":"menu.listMenu",
    "accessLevel": 2,
    "request":[
        {
            "param":"pid",
            "required":false,
            "default":0,
            "type":"Integer",
            "description":"上级菜单ID"
        },
        {
            "param":"rid",
            "required":false,
            "default":"",
            "type":"Integer",
            "description":"指定角色，如果有指定角色，会多返回一个allow字段，表明这个角色有没权限访问"
        },
        {
            "param":"appId",
            "required":false,
            "type":"Integer",
            "description":"指定应用ID，未指定时，以当前appKey为准"
        }
    ],
    "response":{
        "data":{
            "type":"Object",
            "hasSampleFile":false,
            "responseItem": {
                "list":{
                    "type":"Array",
                    "responseItem":{

                        "display":{
                            "type":"Integer",
                            "sample":1,
                            "description":"是否显示，1是，0不是"
                        },
                        "name":{
                            "type":"String",
                            "sample":"控制台",
                            "description":"菜单名称"
                        },
                        "id":{
                            "type":"Integer",
                            "sample":1,
                            "description":"菜单ID"
                        },
                        "parentId":{
                            "type":"Integer",
                            "sample":0,
                            "description":"菜单父级ID"
                        },
                        "url":{
                            "type":"String",
                            "sample":"",
                            "description":"菜单网址"
                        },
                        "sortByWeight":{
                            "type":"Integer",
                            "sample":1,
                            "description":"排序权重"
                        },
                        "allow":{
                            "type":"Integer",
                            "sample":1,
                            "description":"指定角色时，会返回这个属性，1表示有权访问，0表示无权访问"
                        }
                    },
                    "description":"数据列表"
                },
                "total":{
                    "type":"Integer",
                    "description":"记录总数",
                    "sample":10
                },
                "page":{
                    "type":"Integer",
                    "description":"当前页码",
                    "sample":1
                },
                "limit":{
                    "type":"Integer",
                    "description":"每页条数",
                    "sample":10
                }
            }
        }
    }
}