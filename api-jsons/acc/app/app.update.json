{
    "id":"acc.app.update",
    "name":"更新应用",
    "description":"更新应用",
    "namespace":"Kuga\\Api\\Acc",
    "method":"App.update",
    "accessLevel": 1,
    "request":[
        {
            "param":"id",
            "required":true,
            "default":"",
            "type":"Integer",
            "description":"要更新的应用ID"
        },
        {
            "param":"name",
            "required":true,
            "default":"",
            "type":"String",
            "description":"应用名称"
        },
        {
            "param":"disabled",
            "required":false,
            "default":"n",
            "type":"string",
            "description":"禁用，y禁用，n启用"
        },
        {
            "param":"autoCreateSecret",
            "required":false,
            "default":"n",
            "type":"string",
            "description":"自动生成secret,y是，n否"
        },
        {
            "param":"allowAutoCreateUser",
            "required":false,
            "default":"n",
            "type":"String",
            "name":"是否允许自动创建用户（比如通过验证码方式自动注册），y允许，n不允许"
        },
        {
            "param":"shortDesc",
            "required":false,
            "default":"",
            "type":"String",
            "description":"描述"
        }
    ],
    "response":{
        "data":{
            "type":"Boolean",
            "sample":true,
            "description":"成功返回true，失败返回false"
        }
    }
}