{
  "id":"acc.role.save.operations",
  "name":"角色分配权限资源",
  "description":"指定操作表的ID列表，分配给指定的角色",
  "namespace":"Kuga\\Api\\Acc",
  "method":"Acc.assignOperationsToRole",
  "accessLevel": 1,
  "request":[
    {
      "param":"rid",
      "required":true,
      "default":"",
      "type":"Integer",
      "description":"角色ID"
    },
    {
      "param":"appId",
      "required":true,
      "default":"",
      "type":"String",
      "description":"应用ID"
    },
    {
      "param":"res",
      "required":true,
      "default":"",
      "type":"String",
      "description":"资源代码"
    },
    {
      "param":"dataId",
      "required":false,
      "default":"",
      "type":"String",
      "description":"子资源ID"
    },
    {
      "param":"opcodes",
      "required":false,
      "default":"",
      "type":"Array",
      "description":"操作授权数组",
      "requestItem":[
        {
          "param":"code",
          "required":true,
          "default":"",
          "type":"String",
          "description":"操作码"
        },
        {
          "param":"allow",
          "required":true,
          "default":"",
          "type":"string",
          "description":"操作码授权结果，y允许，n禁止,空为不设置"
        }
      ]
    }
  ],
  "response":{
    "data":{
      "type":"Boolean",
      "sample":true,
      "description":"成功返回true，失败返回false"
    }
  }
}